<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext HTTP traffic to test/staging hosts; tighten before production -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">85.235.148.177</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    <!-- Explicitly allow connections to production domain (HTTPS). -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">liberaleidee.it</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
