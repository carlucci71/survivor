#/etc/nginx/sites-available/liberaleidee.it

server {
    server_name liberaleidee.it www.liberaleidee.it;

    # Frontend Angular


location /survivor/ {
    alias /home/survivor/github/survivor/survivor_webapp/dist/survivor_webapp/browser/;
    try_files $uri $uri/ /survivor/index.html =404;
}

# Cache per file statici - DEVE essere fuori dalla location annidata
location ~* ^/survivor/.*\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf)$ {
    expires 1y;
    add_header Cache-Control "public, immutable";
}

    # Backend API (metti PRIMA di /survivor/ per priorit√†)
    location /api/ {
        proxy_pass http://localhost:8389/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    location /fantacalcio/ {
        proxy_pass http://localhost:8080/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_http_version 1.1;
    }

    location /offerte/ {
        proxy_pass http://localhost:8087/offerte/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_http_version 1.1;
    }

    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/liberaleidee.it/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/liberaleidee.it/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}

# HTTP redirect (corretto)
server {
    listen 80;
    server_name liberaleidee.it www.liberaleidee.it;
    return 301 https://$host$request_uri;
}

